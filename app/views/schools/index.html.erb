<!-- app/views/schools/index.html.erb -->
<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Board</th>
      <th>School Name</th>
      <th>Principle Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.board %></td>
        <td><%= school.schoolName %></td>
        <td><%= school.principalName %></td>
        <td>
          <%= link_to 'Show', school %>
          <%= link_to 'Edit', edit_school_path(school) %>
          <%= link_to 'Delete', school_path(school),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            method: :delete %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New School', new_school_path %>
<%= link_to 'Back to Students', students_path %>
